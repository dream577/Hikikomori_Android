<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/videoPlayFragment">

    <fragment
        android:id="@+id/videoPlayFragment"
        android:name="com.violet.hikikomori.view.media.VideoPlayFragment"
        android:label="fragment_video_play"
        tools:layout="@layout/fragment_video_play" />

    <fragment
        android:id="@+id/mediaFileFragment"
        android:name="com.violet.hikikomori.view.media.MediaFileFragment"
        android:label="fragment_media_file"
        tools:layout="@layout/fragment_media_file">
        <action
            android:id="@+id/action_mediaFileFragment_to_videoPlayFragment"
            app:destination="@id/videoPlayFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_from_right" />
    </fragment>
</navigation>